<Window x:Class="WpfApp.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:properties="clr-namespace:WpfApp.Properties"
        mc:Ignorable="d"
        Title="StudentWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="{x:Static properties:Resources.Index}"/>
        <TextBox Text="{Binding Index}"/>

        <Label Content="{x:Static properties:Resources.BirthDate}"/>
        <DatePicker SelectedDate="{Binding BirthDate}"/>
    </StackPanel>
</Window>
